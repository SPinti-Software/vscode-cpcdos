{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CpcdosC+",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#variables"
		},
		{
			"include": "#arrays"
		},
		{
			"include": "#keyword-end"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#numerics"
		},
		{
			"include": "#operators"
		},
		{
			"name": "constant.language.cpc",
			"match": "\\\\#NULL"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.cpc",
					"begin": "^(?i)(rem/|//|')",
					"beginCaptures": {
						"1": {
							"name": "punctuation.definition.comment.cpc"
						}
					},
					"end": "$"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.cpc",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.cpc",
					"match": "\\\\."
				},
				{
					"name": "variable.other.normal.cpc",
					"match": "(?i)(%[a-z_][a-z0-9_\\.]+%)"
				},
				{
					"name": "variable.other.normal.cpc",
					"match": "(?i)(\\${[a-z_][a-z0-9_\\.]+})"
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"begin": "(?i)(f[uo]nction/)[ \\t]+([a-z_][a-z0-9_\\.]*)[ \\t]*(\\()",
					"beginCaptures": {
						"1": {
							"name": "keyword.control.cpc"
						},
						"2": {
							"name": "entity.name.function.cpc"
						},
						"3": {
							"name": "punctuation.definition.parameters.begin.cpc"
						}
					},
					"end": "\\)",
					"endCaptures": {
						"0": {
							"name": "punctuation.definition.parameters.end.cpc"
						}
					},
					"name": "meta.function.cpc",
					"patterns": [
						{
							"match": "[a-zA-Z_][a-zA-Z0-9_]*",
							"name": "variable.parameter.function.cpc"
						},
						{
							"match": ",",
							"name": "punctuation.separator.arguments.cpc"
						}
					]
				},
				{
					"begin": "(?i)(declarer?/)[ \\t]+([a-z_][a-z0-9_\\.]*)[ \\t]*(\\()",
					"beginCaptures": {
						"1": {
							"name": "keyword.control.cpc"
						},
						"2": {
							"name": "entity.name.function.cpc"
						},
						"3": {
							"name": "punctuation.definition.parameters.begin.cpc"
						}
					},
					"end": "(?i)(\\))(?:[ \\t]*(\\:)[ \\t]*(level|niveau)[ \\t]*(\\()([2-5])(\\)))?",
					"endCaptures": {
						"1": {
							"name": "punctuation.definition.parameters.begin.cpc"
						},
						"2": {
							"name": "punctuation.definition.parameters.end.cpc"
						},
						"3": {
							"name": "keyword.control.cpc"
						},
						"4": {
							"name": "punctuation.definition.parameters.begin.cpc"
						},
						"5": {
							"name": "constant.numeric.cpc"
						},
						"6": {
							"name": "punctuation.definition.parameters.end.cpc"
						}
						
					},
					"name": "meta.function.cpc",
					"patterns": [
						{
							"match": "[a-zA-Z_][a-zA-Z0-9_]*",
							"name": "variable.parameter.function.cpc"
						},
						{
							"match": ",",
							"name": "punctuation.separator.arguments.cpc"
						}
					]
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.other.normal.cpc",
					"match": "(?i)(%[a-z_][a-z0-9_\\.]+%)"
				},
				{
					"name": "variable.other.normal.cpc",
					"match": "(?i)(@#[a-z_][a-z0-9_\\.]+)"
				}
			]
		},
		"arrays": {
			"patterns": [
				{
					"match": "(?i)(fix/|set/)[ \\t]+[a-z_][a-z0-9_\\.]*[ \\t]*\\[([0-9]+)[ \\t]*(to|a)",
					"captures": {
						"1": {
							"name": "keyword.control.cpc"
						},
						"2": {
							"name": "constant.numeric.cpc"
						},
						"3": {
							"name": "keyword.control.cpc"
						}
					}
				}
			]
		},
		"keyword-end": {
			"patterns": [
				{
					"name": "keyword.control.cpc",
					"match": "(?i)(fin/|end/)[ \\t]+(button|bouton|checkbox|if|si|function|fonction|picturebox|imagebox|progressbar|barreprogression|textblock|textebloc|textbox|textebox|window|fenetre)"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.cpc",
					"match": "(?i)(button|bouton|ccp|checkbox|client|close|fermer|cls|cmd|colorf|couleurc|colorb|couleurf|copy|copier|create|creer|declare|declarer|delete|supprimer|dir|rep|end|fin|exe|folder|dossier|function|fonction|goto|aller|gui|iug|help|aide|if|si|loc|pos|msgbox|message|open|ouvrir|picturebox|imagebox|ping|progressbar|barreprogression|refresh|actualiser|rename|renommer|return|retour|server|serveur|set|fix|start|demarrer|stop|stopk|sys|textblock|textebloc|textbox|textebox|txt|window|fenetre|write|ecrire)/"
				},
				{
					"name": "keyword.control.cpc",
					"match": "(?i)(sinon\\:|else\\:|then\\:|alors\\:)"
				}
			]
		},
		"numerics": {
			"patterns": [
				{
					"name": "constant.numeric.cpc",
					"match": "(?<![\\w\\d.])\\d+"
				}
			]
		},
		"operators": {
			"match": "[!N][><~]=|[=!N~><]?=|[!N]?[><]",
			"name": "keyword.operator.cpc"
		}
	},
	"scopeName": "source.cpc"
}